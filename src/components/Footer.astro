---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: "GitHub", url: "https://github.com/yourusername", icon: "github" },
  {
    name: "LinkedIn",
    url: "https://linkedin.com/in/yourusername",
    icon: "linkedin",
  },
  { name: "Twitter", url: "https://twitter.com/yourusername", icon: "twitter" },
];
---

<footer class="bg-gray-100 dark:bg-gray-800 mt-auto">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-4 md:mb-0">
        <p>&copy; {currentYear} Matt Birch. All rights reserved.</p>
      </div>
      <nav class="flex space-x-4">
        {
          socialLinks.map((link) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
              aria-label={link.name}
            >
              <span class="sr-only">{link.name}</span>
              <i class={`fab fa-${link.icon}`} />
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</footer>

<script>
  // This script adds Font Awesome for the social icons
  if (!document.querySelector("#font-awesome-css")) {
    const link = document.createElement("link");
    link.id = "font-awesome-css";
    link.rel = "stylesheet";
    link.href =
      "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css";
    document.head.appendChild(link);
  }
</script>
